{{#partial "title"}}
    Create Hero
{{/partial}}

{{#partial "content"}}
    <div class="h-100 blur-grey">
        <div class="h-100 d-flex  justify-content-center align-items-center">

            <div class="w-40 card p-4 bg-white">
                <div class="d-flex w-100 justify-content-center">
                    <img src="/assets/form1.png" class="w-50" alt="...">
                </div>
                <form class="form-group" action="/squads" method="POST">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" class="form-control" id="name" name="name" placeholder="Name" required>
                    </div>
                    <div class="form-group">
                        <label for="cause">Cause</label>
                        <select type="text" class="form-control" id="cause" name="cause"
                                placeholder="Power">
                            <option value="hunger">Hunger</option>
                            <option value="speed">Carbon Emission</option>
                            <option value="tech">Technology</option>
                            <option value="security">Security</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="maxsize">Maximum Size</label>
                        <input type="text" class="form-control" id="maxsize" name="maxsize"
                               placeholder="Maximum Size">
                    </div>
                    <div class="w-100">
                        <button type="submit" class="btn btn-outline-dark w-100">Submit</button>
                        <button onclick="goHome('/squads')" class="my-1 btn  w-100 text-danger">Close</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{{/partial}}
{{> layout.hbs }}